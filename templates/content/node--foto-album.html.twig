{#
/**
 * @file
 * Theme override to display a node--foto-album.html.twig.
 * attach {{ attach_library('jpkot/waterfalljs') }}
 * http://www.jqueryscript.net/layout/Responsive-Pinterest-style-Layout-Plugin-Bootstrap-waterfall.html
 * the library waterfalljs = bootstrap-waterfall.js and to initialize the waterfall layout
 * @see template_preprocess_node()
 *
 */
#}
{% set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
node.isPromoted() ? 'node--promoted',
node.isSticky() ? 'node--sticky',
not node.isPublished() ? 'node--unpublished',
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
] %}
{{ attach_library('classy/node') }}
{{ attach_library('jpkot/waterfalljs') }}

<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('node__content') }}>

    {{ content.field_impressie_img }}

  </div>

</article>
